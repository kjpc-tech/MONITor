<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="tech.kjpc.monitorapp.MONITorSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="@string/monitor_settings_ping_title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/monitor_settings_ping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitor_settings_ping_help" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_margin"
            android:orientation="vertical">

            <Switch
                android:id="@+id/monitor_settings_vibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitor_settings_vibration_title"
                android:textColor="@color/color_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitor_settings_vibration_help" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_margin"
            android:orientation="vertical">

            <Switch
                android:id="@+id/monitor_settings_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitor_settings_sound_title"
                android:textColor="@color/color_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitor_settings_sound_help" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_margin"
            android:orientation="vertical">

            <Switch
                android:id="@+id/monitor_settings_check_ssl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitor_settings_check_ssl_title"
                android:textColor="@color/color_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitor_settings_check_ssl_help" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
